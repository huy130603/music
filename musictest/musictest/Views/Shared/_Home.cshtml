<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/mp3.css" rel="stylesheet" />
    <link href="~/Content/home.css" rel="stylesheet" />
    <link href="~/Content/bootstrap5/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    <script src="https://kit.fontawesome.com/26504e4a1f.js" crossorigin="anonymous"></script>

    <style>
        a:link {
            color: #0a47ff;
            text-decoration: none;
        }

        a:visited {
            color: black;
            text-decoration: none;
        }

        a:hover {
            color: black;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div id="div-content">
        <div class="div-left">
            <div class="div-left">
                <img class="logo" src="~/Picture/logo.png" />
                <ul style="list-style:none">
                    <li>
                        <a style="font-size: large; color: white; position:absolute; left: 40px;top:150px;">
                            <i class="bi bi-house-door"></i>
                            <span>Trang chủ</span>
                        </a>
                    </li>
                    <li>
                        <a  style="font-size: large; color: white; position:absolute; left: 40px; top: 200px;">
                            <i class="bi bi-search"></i>
                            <span>Tổng hợp nhạc</span>
                        </a>
                    </li>
                    <li>
                        <a  style="font-size:large; color: white; position: absolute;left: 40px; top: 250px;">
                            
                            <i class="bi bi-collection-play"></i>
                            <span>Thư viện</span>
                        </a>
                    </li>
                </ul>
            </div>
            
        </div>
        <div class="div-top">
            
            <a href="Login">
                <div class="Login">
                    <span>ĐĂNG NHẬP</span>
                </div>
            </a>
            <a href="Register">
                <div class="Register">
                    <span>ĐĂNG KÍ</span>
                </div>
            </a>
        </div>
        <div class="div-right">
            @RenderBody()
            <img src="~/Picture/anhnen.jpg" />
            
        </div>
        </div> 
        <div id="div-footer">

        </div>
    
</body>
</html>