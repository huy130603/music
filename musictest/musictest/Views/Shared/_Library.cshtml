<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/mystyle.css" rel="stylesheet" />
    <link href="~/Content/bootstrap5/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="~/Content/mp3.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/26504e4a1f.js" crossorigin="anonymous"></script>

    <style>
        a:link {
            color: #0a47ff;
            text-decoration: none;
        }

        a:visited {
            color: black;
            text-decoration: none;
        }

        a:hover {
            color: black;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div id="div-content">
        <div class="div-left">
            <img class="logo" src="~/Picture/logo.png" />
            <ul style="list-style:none">
                <li>
                    <a href="Home1" style="font-size: large; color: white; position:absolute; left: 40px;top:150px;">
                        <i class="bi bi-house-door"></i>
                        <span>Trang chủ</span>
                    </a>
                </li>
                <li>
                    <a href="Search" style="font-size: large; color: white; position:absolute; left: 40px; top: 200px;">
                        <i class="bi bi-search"></i>
                        <span>Tổng hợp nhạc</span>
                    </a>
                </li>
                <li>
                    <a href="Library" style="font-size:large; color: white; position: absolute;left: 40px; top: 250px;">

                        <i class="bi bi-collection-play"></i>
                        <span>Thư viện</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="div-top">

        </div>
        <div class="div-right">
            @RenderBody()
        </div>
    </div>
    <div id="div-footer">

    </div>


    <div class="songInfo">
        <span id="masterSongName">An Thần - ft Thắng  Low G  Rap Nhà Làm</span>
    </div>


</body>
</html>
