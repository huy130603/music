<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/mp3.css" rel="stylesheet" />
    <link href="~/Content/USUK.css" rel="stylesheet" />
    <link href="~/Content/bootstrap5/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    <script src="https://kit.fontawesome.com/26504e4a1f.js" crossorigin="anonymous"></script>

    <style>
        a:link {
            color: #0a47ff;
            text-decoration: none;
        }

        a:visited {
            color: black;
            text-decoration: none;
        }

        a:hover {
            color: black;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div id="div-content">
        <div class="div-left">
            <div class="div-left">
                <img class="logo" src="~/Picture/logo.png" />
                <ul style="list-style:none">
                    <li>
                        <a href="Home1" style="font-size: large; color: white; position:absolute; left: 40px;top:150px;">
                            <i class="bi bi-house-door"></i>
                            <span>Trang chủ</span>
                        </a>
                    </li>
                    <li>
                        <a href="Search" style="font-size: large; color: white; position:absolute; left: 40px; top: 200px;">
                            <i class="bi bi-search"></i>
                            <span>Tổng hợp nhạc</span>
                        </a>
                    </li>
                    <li>
                        <a href="Library" style="font-size:large; color: white; position: absolute;left: 40px; top: 250px;">

                            <i class="bi bi-collection-play"></i>
                            <span>Thư viện</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div id="masterImg">
                <img src="~/USUK/1.png">
            </div>
        </div>
        <div class="div-top">

        </div>
        <div class="div-right">
            @RenderBody()
            <div class="container">
                <img src="~/Picture/anh-dong-meo-va-ga-con-de-thuo-unscreen.gif" id="meoxanhgif" />
                <div class="songlist">
                    <div class="songitemcontainer">

                        <div class="songitem">
                            <i class="fas play-icon fa-1x fa-play" id="0" style="margin-top:30px"></i>
                            <img alt="1" />
                            <span class="songName"></span>
                            <span class="songlistplay"><span class="timestamp1">03:38</span></span>
                        </div>
                        <div class="songitem">
                            <i class="fas play-icon fa-1x fa-play" id="1" style="margin-top:30px"></i>
                            <img alt="1" />
                            <span class="songName"></span>
                            <span class="songlistplay"><span class="timestamp2">04:20</span></span>
                        </div>
                        <div class="songitem">
                            <i class="fas play-icon fa-1x fa-play" id="2" style="margin-top:30px"></i>
                            <img alt="1" />
                            <span class="songName"></span>
                            <span class="songlistplay"><span class="timestamp3">04:25</span></span>
                        </div>
                        <div class="songitem">
                            <i class="fas play-icon fa-1x fa-play" id="3" style="margin-top:30px"></i>
                            <img alt="1" />
                            <span class="songName"></span>
                            <span class="songlistplay"><span class="timestamp4">04:25</span></span>
                        </div>
                        <div class="songitem">
                            <i class="fas play-icon fa-1x fa-play" id="4" style="margin-top:30px"></i>
                            <img alt="1" />
                            <span class="songName"></span>
                            <span class="songlistplay"><span class="timestamp5">03:51</span></span>
                        </div>
                    </div>
                </div>
                <div class="songbanner"></div>
            </div>
        </div>
    </div>
    <div id="div-footer">
        <div class="bottom">
            <input type="range" name="range" id="progressbar" min="0" value="0" max="100" />
            <div class="control">
                <i class="fas fa-2x fa-backward" id="playback"></i>
                <i class="fas fa-2x fa-play" id="masterplay"></i>
                <i class="fas fa-2x fa-forward" id="playnext"></i>
            </div>
        </div>

        <span id="masterSongName">Alan Walker - Faded</span>
    </div>

    <script src="~/Content/USUK.js"></script>
</body>
</html>
